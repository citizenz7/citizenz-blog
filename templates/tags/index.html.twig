{% extends 'base.html.twig' %}

{% block title %}Tags index{% endblock %}

{% block body %}
    <h2>Tags index</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Nb d'articles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>{{ tag.slug }}</td>
                <td>{{ tag.articles | length }}</td>
                <td>
                    <a class="btn btn-sm btn-primary2" href="{{ path('tags_show', {'slug': tag.slug}) }}">Voir</a>
                    <a class="btn btn-sm btn-info2" href="{{ path('tags_edit', {'slug': tag.slug}) }}">Editer</a>
                    {{ include('tags/_delete_form.html.twig') }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-sm btn-success" href="{{ path('tags_new') }}">Cr√©er un nouveau tag</a>
{% endblock %}
