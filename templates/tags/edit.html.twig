{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Editer le tag{% endblock %}

{% block body %}
<div class="row">
    <div class="col-sm-9 mt-3">

        {% if is_granted('ROLE_ADMIN') %}
            <h2>Editer le tag</h2>

            {{ include('tags/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

        {% else %}
            <div class="mt-4 pt-4 pb-2 px-3 alert alert-danger text-center">
                <p>
                    <i class="fas fa-user-lock fa-5x"></i>
                </p>
                <p>
                    Vous ne pouvez pas accéder à cette page !
                </p>
                <p>
                    <a class="btn btn-primary2" href="{{ path('home') }}"><i class="fas fa-home"></i> Retourner à
                        l'accueil</a>
                </p>
            </div>
        {% endif %}

    </div>
    {% block sidebar %}
        {{ sidebar() }}
    {% endblock %}

</div>
{% endblock %}