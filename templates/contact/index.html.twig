{% extends 'base.html.twig' %}

{% block title %}Me contacter{% endblock %}

{% block body %}

<div class="row pb-5">
    <div class="col-sm-8 mt-3 pr-5 text-justify">

        {% for msg in app.session.flashBag.get('successContact')  %}
        <div class="alert alert-success alert-dismissible fade show mt-5" role="alert">
            {{ msg }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        {% endfor %}

        <div class="mt-3 mb-3 px-3 alert alert-info text-center" style="font-size:1.7rem;">Me contacter</div>

        {{ form_start(our_form) }}
        <div class="form-group">
            {{ form_row(our_form.name, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre nom/pseudo'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(our_form.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre adresse e-mail'}})
            }}
        </div>

        <div class="form-group">
            {{ form_row(our_form.message, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group text-right">
            <input type="submit" value="Envoyer" class="btn btn-primary mr-3 mb-4"> <input type="reset" value="Annuler"
                class="btn btn-secondary mb-4">
        </div>
        {{ form_end(our_form) }}

    </div>

    {% block sidebar %}
        {{ sidebar() }}
    {% endblock %}

</div>

{% endblock %}