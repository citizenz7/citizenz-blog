{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Rédaction d'un nouvel article{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css">
{% endblock %}

{% block body %}
    <div class="row pb-5">
        <div class="col-sm-9 mt-3 pr-5 text-justify">

            {% if is_granted('ROLE_ADMIN') %}

                <h2>Nouvel article</h2>

                {{ include('articles/_form.html.twig') }}

            {% else %}
                <div class="mt-4 pt-4 pb-2 px-3 alert alert-danger text-center">
                    <p>
                        <i class="fas fa-user-lock fa-5x"></i>
                    </p>
                    <p>
                        Vous ne pouvez pas accéder à cette page !
                    </p>
                    <p>
                        <a class="btn btn-primary2" href="{{ path('home') }}"><i class="fas fa-home"></i> Retourner à
                            l'accueil</a>
                    </p>
                </div>
            {% endif %}
        </div>

        {% block sidebar %}
            {{ sidebar() }}
        {% endblock %}
    </div>

{% endblock %}

{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script>
        $('select').select2();
    </script>
{% endblock %}