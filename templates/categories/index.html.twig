{% extends 'base.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block body %}
    <h1>Categories index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th width="15%;">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.titre }}</td>
                <td>{{ categorie.description }}</td>
                <td>
                    <a class="btn btn-sm btn-primary2" href="{{ path('categories_show', {'slug': categorie.slug}) }}">V</a>
                    <a class="btn btn-sm btn-info2" href="{{ path('categories_edit', {'slug': categorie.slug}) }}">E</a>
                    <a class="btn btn-sm btn-secondary2" href="#">D/A</a>
                    {{ include('categories/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
